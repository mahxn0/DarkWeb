distclean:	mrclean

mrclean:	clean
	rm -f config.status  Makefile config.log


.depend:
	$(CPP) -MM $(SOURCES) > .depend
        
depend:
	-rm -f .depend
	$(MAKE) .depend
        
include .depend

# tags
tags:	$(SOURCES)
	ctags -o tags $^ *.h

# dist
dist:
	$(MAKE) clean
	./makedist.sh
        
# object dump
boa.objdump:    data_update.cgi
	objdump --disassemble-all --source data_update.cgi > $@

